<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.yy.mapper.UserMapper">

	<resultMap id="user" type="com.yy.model.User">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="password" column="password" />
		<result property="productLine" column="product_line" />
		<result property="createdDate" column="created_date" />
		<result property="modifyDate" column="modify_date" />
	</resultMap>

	<select id="getUserByName" resultMap="user">
		select * from user where name = #{name}
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `user` (`name`, `password`, `product_line`, `created_date`, `modify_date`)
		VALUES (#{name}, #{password}, #{productLine}, now(), now());
	</insert>

</mapper>